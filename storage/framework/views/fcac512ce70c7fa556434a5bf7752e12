<div class="form-group <?php if($errors->has('slug')): ?> has-error <?php endif; ?>">
    <?php echo Form::label('slug','Slug',['class' =>'col-xs-2 control-label']); ?>

    <div class="col-xs-8">
        <?php if($errors->has('slug')): ?> <label class="control-label" for="inputError"><i class="fa fa-times-circle-o"></i>
            <?php echo e($errors->first('slug')); ?></label>
        <?php endif; ?>
        <?php echo Form::text('slug',null,['class' => 'form-control','placeholder' => 'Ingrese un slug']); ?>


    </div>

</div>
<div class="form-group <?php if($errors->has('name')): ?> has-error <?php endif; ?>">
    <?php echo Form::label('name','Nombre',['class' =>'col-xs-2 control-label']); ?>

    <div class="col-xs-8">
        <?php if($errors->has('name')): ?> <label class="control-label" for="inputError"><i class="fa fa-times-circle-o"></i>
            <?php echo e($errors->first('name')); ?></label>
        <?php endif; ?>
        <?php echo Form::text('name',null,['class' => 'form-control','placeholder' => 'Ingrese un nombre']); ?>


    </div>

</div>





